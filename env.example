# Base Chain RPC URL
RPC_URL=https://mainnet.base.org

# Private key for the wallet that will pay for gas (without 0x prefix)
PRIVATE_KEY=your_private_key_here_without_0x_prefix 

# Sentry DSN 
SENTRY_DSN=https://sentry.

# Environment type (mainnet, testnet, or localnet)
ENV=testnet

# API access token for authentication
BEACONATOR_ACCESS_TOKEN=your_api_token_here

# Contract addresses (replace with actual deployed contract addresses)
BEACON_FACTORY_ADDRESS=0x1234567890123456789012345678901234567890
PERPCITY_REGISTRY_ADDRESS=0x3456789012345678901234567890123456789012
PERP_HOOK_ADDRESS=0x5678901234567890123456789012345678901234

# Perp Configuration (all optional - defaults will be used if not specified)
# Trading fee in basis points (e.g., 50 = 0.5%) since we represent 6 decimals
PERP_TRADING_FEE_BPS=5000

# Trading fee creator split in Q96 format (e.g., 5% = 3951369912303465813)
PERP_TRADING_FEE_CREATOR_SPLIT_X96=3951369912303465813

# Minimum margin amount in USDC (6 decimals, e.g., 0 = no minimum)
PERP_MIN_MARGIN_USDC=0

# Maximum margin amount in USDC (6 decimals, e.g., 1000 USDC = 1000000000)
PERP_MAX_MARGIN_USDC=1000000000

# Minimum opening leverage in Q96 format (0 = no minimum)
PERP_MIN_OPENING_LEVERAGE_X96=0

# Maximum opening leverage in Q96 format (e.g., 10x = 790273926286361721684336819027)
PERP_MAX_OPENING_LEVERAGE_X96=790273926286361721684336819027

# Liquidation leverage threshold in Q96 format (e.g., 10x = 790273926286361721684336819027)
PERP_LIQUIDATION_LEVERAGE_X96=790273926286361721684336819027

# Liquidation fee percentage in Q96 format (e.g., 1% = 790273926286361721684336819)
PERP_LIQUIDATION_FEE_X96=790273926286361721684336819

# Liquidation fee split percentage in Q96 format (e.g., 50% = 39513699123034658136834084095)
PERP_LIQUIDATION_FEE_SPLIT_X96=39513699123034658136834084095

# Funding interval in seconds (e.g., 86400 = 1 day)
PERP_FUNDING_INTERVAL_SECONDS=86400

# Tick spacing for price ticks (e.g., 30)
PERP_TICK_SPACING=30

# Starting square root price in Q96 format (e.g., sqrt(50) * 2^96 = 560227709747861419891227623424)
PERP_STARTING_SQRT_PRICE_X96=560227709747861419891227623424

# Default tick range for liquidity positions - lower bound (e.g., -23030 ≈ sqrt(0.1) price)
PERP_DEFAULT_TICK_LOWER=-23030

# Default tick range for liquidity positions - upper bound (e.g., 23030 ≈ sqrt(10) price)
PERP_DEFAULT_TICK_UPPER=23030

# Liquidity scaling factor (multiplier to convert USDC margin to 18-decimal liquidity)
PERP_LIQUIDITY_SCALING_FACTOR=400000000000000

# Maximum margin amount per perp in USDC (6 decimals, e.g., 5 USDC = 5000000)
PERP_MAX_MARGIN_PER_PERP_USDC=5000000